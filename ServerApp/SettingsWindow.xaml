                </TextBox>
            </StackPanel>
        </ScrollViewer>
        <Button 
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            Grid.Row="2"
            Click="OKButton_Click"
            Content="{x:Static p:Resources.OK}"
            x:Name="oKButton"/>
        <Button 
            Grid.Column="2" 
            Grid.ColumnSpan="2" 
            Grid.Row="2"
            Click="CancelButton_Click"
            Content="{x:Static p:Resources.Cancel}"
            x:Name="cancelButton"/>
    </Grid>
</Window>
